{
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": [
    "unicorn"
  ],
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": "error",
    "@typescript-eslint/strict-boolean-expressions": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/return-await": "off",
    "no-console": "error",
    "indent": [
      "error",
      2
    ],
    "camelcase": "error",
    "no-unused-vars": "warn",
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "kebabCase": true,
          "camelCase": false,
          "pascalCase": false,
          "snakeCase": false
        }
      }
    ]
  }
}